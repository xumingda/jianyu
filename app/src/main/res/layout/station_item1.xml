<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    android:background="@drawable/list_item_bg"
    android:paddingLeft="1.0dip"
    android:paddingTop="5.0dip"
    android:paddingRight="1.0dip"
    android:paddingBottom="5.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/img_operator"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:src="@mipmap/wifi_red"
        android:scaleType="fitCenter"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/img_operator"
        android:text="4G"
        android:textSize="14dp"
        android:id="@+id/type"/>
    <TextView
        android:textColor="@color/black"
        android:id="@+id/ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="192.168.1.19:8888"
        android:layout_toRightOf="@id/img_operator"
        android:layout_alignBottom="@id/state"
        android:layout_alignParentTop="true" />
    <TextView
        android:textColor="#ff000000"
        android:id="@+id/link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:text="未连接"
        android:layout_toRightOf="@id/ip"
        android:layout_alignBaseline="@id/ip" />
    <TextView
        android:textColor="#ff000000"
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未同步未激活"
        android:layout_alignParentRight="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignLeft="@id/ip"
        android:layout_below="@id/ip"
        android:layout_marginTop="4dp"
        android:id="@+id/ly_line1"
        android:padding="4dp">
    <TextView
        android:textColor="#ffafafaf"
        android:id="@+id/freq"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"

        />
    <!--<TextView-->
        <!--android:textColor="#ff000000"-->
        <!--android:id="@+id/mnc"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="3.0dip"-->
        <!--android:text="00"-->
        <!--android:layout_toRightOf="@id/mcc"-->
        <!--android:layout_alignBaseline="@id/mcc"-->
        <!--/>-->
    <TextView
        android:textColor="#ffff0000"
        android:id="@+id/pci"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3.0dip"
        />
    <TextView
        android:textColor="#ff000000"
        android:id="@id/tac"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3.0dip"
        />
    <!--<TextView-->
        <!--android:textColor="#ff000000"-->
        <!--android:id="@+id/cid"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="3.0dip"-->
        <!--android:text="1000"-->
        <!--android:layout_toRightOf="@id/tac"-->
        <!--android:layout_alignBaseline="@id/mcc"-->
       <!--/>-->
    <TextView
        android:textColor="#ffff0000"
        android:id="@+id/rssi"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3.0dip"

        />
    <TextView
        android:textColor="#ff000000"
        android:id="@+id/power"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3.0dip"
        android:text="43dbm"
        android:layout_alignParentRight="true"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_line1"
        android:layout_alignStart="@id/ly_line1"
        android:layout_marginTop="4dp"
        android:id="@+id/soft_ly">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="软件状态:待机"
        android:id="@+id/soft_state"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="cpu温度:56%"
        android:id="@+id/cpu_tem"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="cpu利用率:56%"
        android:id="@+id/cpu_use"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/soft_ly"

        android:layout_marginTop="4dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:text="内存使用率:56%"
            android:id="@+id/rom_use"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="单板温度:56℃"
            android:id="@+id/tem"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text="手动扫频"
            android:id="@+id/open_dbm"
            android:background="@drawable/border"
            />
    </LinearLayout>
</RelativeLayout>